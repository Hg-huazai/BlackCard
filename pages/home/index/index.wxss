/* pages/home/index/index.wxss */
page {
  background-color: #f4f4f4;
}
.clear {
  clear: both;
}  
.content1 {
   margin: 0 10px;
}
.content1 .information {
 background-color: #3d2f49;
   color: #cfbc9c;
   padding: 20px 15px 20px 15px;
   border-radius: 12px 12px 0 0 ;
}
.content1 .information .img {
  display: inline-block;
  vertical-align: middle;
}
.content1 .information .img image {
  width: 50px;
  height: 50px;
}
.content1 .information .username {
  display: inline-block;
  padding-left: 5px;
  vertical-align: middle;
}
.content1 .information .username .user {
  font-size: 10px;
}
.content1 .information .username .member {
  display: inline-block;
  font-size: 12px;
}
.content1 .information .cheap {
  font-size: 14px;
  font-weight: bold;
}
.content1 .information .cheap .money {
  display: inline-block;
}
.content1 .information .cheap .money text {
  display: inline-block;
  font-size: 22px;
}
.content1 .information .cheap .member {
  display: inline-block;
  float: right;
  color: #000;
  padding: 0 5px;
  border-radius: 10px;
  background-color: #f2dcb3;
}
.content1 .discount {
  background-color: #000;
  color: #89878c;
  font-size: 10px;
  padding: 15px 8px 10px;
  border-radius: 0 0 12px 12px;
}
.content1 .discount .discount-left {
  float: left;
}
.content1 .discount .discount-right {
  float: right;
}

/* 食品分类 */
.content2 {
  background-color: #fff;
  padding: 20px 0 20px 0;
  border-radius: 10px 10px 0 0;
}
.content2 .content2-item {
  display: inline-block;
  width: 20%;
}
.content2 .content2-item .img {
  text-align: center
}
.content2 .content2-item .img image {
  width: 50px;
  height: 50px;
  display: inline-block;
}
.content2 .content2-item .name {
  font-size: 12px;
  text-align: center
}

/* 食品轮播推荐 */
.content3 {
  background-color: #f4f4f4;
}
.content3 .content3-item1 {
  padding: 10px 10px;
  background-color: #f4f4f4;
}
.content3 .content3-item1 .item-left {
  float: left;
  font-weight: bold;
  font-size: 20px;
}
.content3 .content3-item1 .item-left text {
  font-size: 12px;
  display: inline-block;
  background-color: #dfc080;
  color: #fff;
  padding: 3px 15px;
  border-radius: 10px 10px 10px 0;
}
.content3 .content3-item1 .item-right {
  float: right;
  font-size: 14px;
  font-weight: bold;
  padding-top: 6px;
}

.content3 .content3-item2 {
  padding: 10px 10px;
  background-color: #f4f4f4;
}
.content3 .content3-item2 .date {
  white-space: nowrap;

}

.content3 .content3-item2 .date .date-item {
  display: inline-block;
  width: 20%;
}
.content3 .content3-item2 .date .date-item .date-item1 {
  font-weight: bold;
  text-align: center;
}

.content3 .content3-item2 .date .date-item .date-item2 {
  font-size: 10px;
  text-align: center;
}


.content3 .content3-item3 {

}
.content3 .content3-item3 .scroll  {
  white-space: nowrap;
}
.content3 .content3-item3 .scroll .scroll-item  {
  display: inline-block;
  width: 90%;
  background-color: #fff;
  margin: 0 5px;
}
.content3 .content3-item3 .scroll .scroll-item:nth-child(1)  {
  margin-left: 10px;
}
.content3 .content3-item3 .scroll .scroll-item .text {
  font-size: 8px;
  padding: 10px;
}
.content3 .content3-item3 .scroll .scroll-item .text text {
  font-size: weight;
  font-size: 12px;
}
.content3 .content3-item3 .food {
  background-color: pink;
  width: 100%;
}

.content3 .content3-item3 .food .food-item {
  font-size: 12px;
  float: left;
  /* padding-left: 10px;
  padding-bottom: 10px; */
  width: 50%;
  box-sizing: border-box;
  margin: 0 auto;
  
}
.content3 .content3-item3 .food .food-item .img image {
  width: 130px;
  height: 130px;
}
.content3 .content3-item3 .food .food-item .name {
  font-weight: blod;
  font-size: 16px;
}
.content3 .content3-item3 .food .food-item .classfly {
  color: #888;
}
.content3 .content3-item3 .food .food-item .monye {
  font-size: 10px;
}

.content3 .content3-item3 .food .food-item .cheap {
  color: #fc938d;
  border: 1px solid #fc938d;
  padding: 2px 5px;
  display: inline-block;
}

