  display: flex;
  padding: 20px 0;
}
.content5 .content5-item1 .content5-item {
  flex: 1;
  text-align: center;
  border-right: 1px solid #dddddd;
}
.content5 .content5-item:nth-child(4) {
  border-right: none;
}
.content5 .content5-item .name{
  font-weight: bold;
  font-size: 16px;
}
.content5 .content5-item .text {
